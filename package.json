{
  "name": "serverless-fastapi-scheduler-template",
  "version": "1.0.0",
  "private": true,
  "description": "FastAPI on AWS Lambda with Serverless v4, EventBridge Rule scheduling (UTC), stage-based deployment (dev/prod), tests, CI/CD.",
  "devDependencies": {
    "serverless": "4.33.0"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "deploy:dev": "SLS_AWS_SDK=3 serverless deploy --stage dev",
    "deploy:prod": "SLS_AWS_SDK=3 serverless deploy --stage prod",
    "remove:dev": "SLS_AWS_SDK=3 serverless remove --stage dev",
    "remove:prod": "SLS_AWS_SDK=3 serverless remove --stage prod",
    "info:dev": "SLS_AWS_SDK=3 serverless info --stage dev",
    "info:prod": "SLS_AWS_SDK=3 serverless info --stage prod",
    "logs:api:dev": "SLS_AWS_SDK=3 serverless logs --function api --stage dev",
    "logs:api:prod": "SLS_AWS_SDK=3 serverless logs --function api --stage prod"
  }
}
